{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/hippocampus/manifest.schema.json",
  "title": "Hippocampus Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "manifestVersion",
    "manifestId",
    "processedAt",
    "status",
    "sourceDocument",
    "knowledgeIndex"
  ],
  "properties": {
  "manifestVersion": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "manifestId": { "type": "string" },
    "processedAt": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["Awaiting Consolidation"] },
    "sourceDocument": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sourceType", "source", "sourceFormat"],
      "properties": {
        "sourceType": { "type": "string", "enum": ["text", "file"] },
        "source": { "type": "string" },
        "sourceFormat": { "type": "string" }
      }
    },
    "knowledgeIndex": {
      "type": "object",
      "additionalProperties": false,
      "required": ["references"],
      "properties": {
        "references": {
          "type": "array",
          "items": { "$ref": "#/definitions/reference" }
        }
      }
    }
  },
  "definitions": {
    "reference": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "rawString",
        "referenceType",
        "sourceFormat",
        "sourcePath",
        "details"
      ],
      "properties": {
        "id": { "type": "integer", "minimum": 1 },
        "rawString": { "type": "string" },
        "referenceType": { "type": "string" },
        "sourceFormat": { "type": "string" },
        "sourcePath": { "type": "string" },
        "details": { "type": "object" }
      },
      "allOf": [
        {
          "if": {
            "properties": { "referenceType": { "const": "web_link" } },
            "required": ["referenceType"]
          },
          "then": {
            "properties": {
              "details": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": { "type": "string" },
                  "authors": { "type": "array", "items": { "type": "string" } },
                  "year": { "type": ["integer", "string"] },
                  "venue": { "type": "string" },
                  "doi": { "type": "string" }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "referenceType": { "const": "in_text_citation" } },
            "required": ["referenceType"]
          },
          "then": {
            "properties": {
              "details": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "author": { "type": "string" },
                  "year": { "type": ["integer", "string"] },
                  "title": { "type": "string" },
                  "authors": { "type": "array", "items": { "type": "string" } },
                  "venue": { "type": "string" },
                  "doi": { "type": "string" }
                }
              }
            }
          }
        },
        {
          "if": { "properties": { "referenceType": { "const": "article" } }, "required": ["referenceType"] },
          "then": {
            "properties": {
              "details": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": { "type": "string" },
                  "authors": { "type": "array", "items": { "type": "string" } },
                  "year": { "type": ["integer", "string"] },
                  "journal": { "type": "string" },
                  "volume": { "type": ["integer", "string"] },
                  "number": { "type": ["integer", "string"] },
                  "pages": { "type": "string" },
                  "doi": { "type": "string" }
                }
              }
            }
          }
        },
        {
          "if": { "properties": { "referenceType": { "const": "book" } }, "required": ["referenceType"] },
          "then": {
            "properties": {
              "details": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": { "type": "string" },
                  "authors": { "type": "array", "items": { "type": "string" } },
                  "year": { "type": ["integer", "string"] },
                  "publisher": { "type": "string" },
                  "isbn": { "type": "string" },
                  "edition": { "type": ["integer", "string"] },
                  "doi": { "type": "string" }
                }
              }
            }
          }
        },
        {
          "if": { "properties": { "referenceType": { "const": "website" } }, "required": ["referenceType"] },
          "then": {
            "properties": {
              "details": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": { "type": "string" },
                  "authors": { "type": "array", "items": { "type": "string" } },
                  "year": { "type": ["integer", "string"] },
                  "site_name": { "type": "string" },
                  "doi": { "type": "string" }
                }
              }
            }
          }
        },
        {
          "if": { "properties": { "referenceType": { "const": "thesis" } }, "required": ["referenceType"] },
          "then": {
            "properties": {
              "details": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": { "type": "string" },
                  "authors": { "type": "array", "items": { "type": "string" } },
                  "year": { "type": ["integer", "string"] },
                  "university": { "type": "string" },
                  "degree": { "type": "string" },
                  "doi": { "type": "string" }
                }
              }
            }
          }
        },
        {
          "if": { "properties": { "referenceType": { "const": "conference" } }, "required": ["referenceType"] },
          "then": {
            "properties": {
              "details": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": { "type": "string" },
                  "authors": { "type": "array", "items": { "type": "string" } },
                  "year": { "type": ["integer", "string"] },
                  "conference": { "type": "string" },
                  "location": { "type": "string" },
                  "pages": { "type": "string" },
                  "doi": { "type": "string" }
                }
              }
            }
          }
        },
        {
          "if": { "properties": { "referenceType": { "const": "unknown" } }, "required": ["referenceType"] },
          "then": {
            "properties": {
              "details": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": { "type": "string" },
                  "authors": { "type": "array", "items": { "type": "string" } },
                  "year": { "type": ["integer", "string"] },
                  "venue": { "type": "string" },
                  "doi": { "type": "string" }
                }
              }
            }
          }
        }
      ]
    }
  }
}
